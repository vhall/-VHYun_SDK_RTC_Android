<?xml version="1.0" encoding="utf-8"?>
<com.vhallyun.rtc.otoInteractive.widget.DragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_drl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vhall.vhallrtc.client.VHRenderView
        android:id="@+id/rv_full_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.vhall.vhallrtc.client.VHRenderView
        android:id="@+id/rv_small_screen"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_change_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_change_camera"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/iv_change_mic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/mic_check_bg"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_change_voice"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:src="@drawable/audio_check_bg"
        android:layout_toRightOf="@id/iv_change_mic"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_call_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_call_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_end"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</com.vhallyun.rtc.otoInteractive.widget.DragRelativeLayout>